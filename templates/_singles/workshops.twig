{% extends craft.app.request.isAjax and not craft.app.request.isLivePreview ? "_ajax" : "_layout" %}
{% set title = entry.title %}

{% block content %}
	{% set image = entry.singlesBannerImage.one() %}
	{% set backgroundImageSmall = image.getUrl('bannerImageBackgroundPortraitSmall576w') %}
	{% set backgroundImageMedium = image.getUrl('bannerBackgroundImageLandscapeMedium1280w') %}
	<div class="d-flex align-items-center justify-content-center hpBanner">
		<picture style="width: 100%; height: 75vh">
			<source srcset="{{ backgroundImageMedium }}" media="(min-width: 1200px)	" style="height:75vh; object-fit:cover; object-position:center; 	width:100%; position: relative">
			<img src="{{ backgroundImageSmall }}" style="height:75vh; 	object-fit:cover; object-position:center; width:100%; position: 	relative"/>
		</picture>
		<div class="container banner-content align-self-end" style="position: absolute; left:0; right:0;">
			<h1 id="title" data-title="Workshops">
				<span>Workshops</span>
			</h1>
		</div>
	</div>

	<div class="main container">
		<div
			class="row">
			{# {% include "_includes/overUrgentfmMenu" %} #}
			<div class="col">
				{{ entry.singlesInhoud }}
			</div>
		</div>
		<div class="row mt-5">
			<div class="col">
				<a href="/wie-zijn-we" class="btn btn-light">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chevron-left" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
					</svg>
                    Wie zijn we?
				</a>
			</div>
		</div>
	</div>
{% endblock %}
